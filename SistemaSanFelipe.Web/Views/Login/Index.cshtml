@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml"; 
}

<body>
     

    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Index", "Login")"> </a>
        </div>

        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body">
                <p style="color: #0043A5" class="login-box-msg"><strong>Iniciar Sesión</strong></p>
                <p> Inicia sesión para acceder a la Historia Clínica Electronica (HCE)</p>
                <form id="frmLogin" action="#" method="post">
                    <div class="input-group mb-3">
                        <input id="Login" type="text" class="form-control" placeholder="DNI*" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input id="Password" type="password" class="form-control" placeholder="Contraseña*" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div id="messageError" class="alert alert-danger" role="alert"></div>


                    ¿Tienes problemas para iniciar sesión? Te sugerimos

                    
                        <!-- /.col -->
                        <p class="mb-0">
                            <a href="@Url.Action("", "")" class="text-center"><strong>Recuperar tu contraseña</STRONG></a>
                        </p>
