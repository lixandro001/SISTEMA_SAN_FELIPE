@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml"; 
}


<body>
    <div class="slider-frame">
        <div class="contenedor"> 
            <ul>
                <li><img  src="~/imagen/pollo1.jpg" /></li>
                <li><img  src="~/imagen/avicola.jpg" /></li>
                <li><img  src="~/imagen/imagenpasto1.jpeg" /></li>
                <li><img  src="~/imagen/paisaje1.jpg" /></li>
                

            </ul> 
                <div class="centrado">
                    <div class="login-box slider">     
                        <center class="col clearfix">
                            <div class="row">
 
                                    <div class="card">
                                        <div class="card-body">
                                            <h2 style="color: #0043A5" class="login-box-msg"><strong>SOLUCIONES GOMEZ</strong></h2>
                                            <p style="color: #0043A5" class="login-box-msg"><strong>Iniciar Sesión</strong></p>
                                            <p> Inicia sesión para acceder al sistema de ventas</p>
                                            <form id="frmLogin" action="#" method="post">
                                                <div class="input-group mb-3">
                                                    <input id="Login" type="text" class="form-control" placeholder="DNI*" required>
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">
                                                            <span class="fas fa-envelope"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="input-group mb-3">
                                                    <input id="Password" type="password" class="form-control" placeholder="Contraseña*" required>
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">
                                                            <span class="fas fa-lock"></span>
                                                        </div>
                                                    </div>
                                                </div>



                                                <div id="messageError" class="alert alert-danger" role="alert"></div>

                                                ¿Tienes problemas para iniciar sesión? Te sugerimos

                                                <p class="mb-0">
                                                    <a href="@Url.Action("", "")" class="text-center"><strong>Recuperar tu contraseña</strong></a>
                                                </p>

                                                <br />
                                                <div class="row">

                                                    <div class="col-12">
                                                        <button id="btnLogin" type="button" style="background-color:#82C534" class="btn btn-success  btn-block">Ingresar</button>
                                                    </div>

                                                </div>
                                            </form>
                                        </div>
                                    </div>
                            </div>
                        </center>
                    </div>
                </div>
        </div>
    </div>




</body>

   
@section scripts{
    <script src="@Url.Content("~/js/login.js")"></script>
}

<link href="~/css/stylePantalla.css" rel="stylesheet" />
<link href="~/adminlte/css/sweetalert2.min.css" rel="stylesheet" />