@{
    ViewBag.Title = "Gestión de Ventas";
    string CFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today);
    string FFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today);
}


<form id="frmExport" class="form-horizontal" role="form" method="post" action="@Url.Action("ExportExcel", "Mantenimiento")">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Bandeja de Ventas</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-4 col-form-label">Desde</label>
                        <div class="col-sm-8">
                            <input type="hidden" id="hdnStartDate" class="form-control" name="date1" />
                            <div class="input-group date">
                                <input type="text" class="form-control pull-right" id="txtStartDate" value="@CFecha">
                                <div class="input-group-append" data-target="#txtStartDate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-4 col-form-label">Hasta</label>
                        <div class="col-sm-8">
                            <input type="hidden" id="hdnEndDate" class="form-control" name="date2" />
                            <div class="input-group date">
                                <input type="text" class="form-control pull-right" id="txtEndDate" value="@FFecha">
                                <div class="input-group-append" data-target="#txtEndDate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="button" id="btnConsultar" class="btn btn-primary"> Consultar </button>
            <button type="button" id="btnNuevo" class="btn btn-success"> Nueva Venta </button>

            <button type="button" class="btn btn-primary" style="visibility: hidden"> .................................</button>
            <button type="button" class="btn btn-primary" style="visibility: hidden">..................................</button>

            <button type="button" id="btnReporteExcel" class="btn btn-success"> Reporte en Excel &nbsp;   <i class="fa fa-file-excel" aria-hidden="true"></i></button>
            <button type="button" id="btnReportePdf" class="btn btn-info"> Reporte en Pdf &nbsp; <i class="fa fa-file-pdf" aria-hidden="true"></i></button>
        </div>


        <div class="card-body">
            <table id="tabDescTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th WIDTH="1%">dcm</th>
                        <th WIDTH="1%">ser</th>
                        <th WIDTH="1%">nro</th>
                        <th WIDTH="1%">fecha</th>
                        <th WIDTH="1%">zona</th>
                        <th WIDTH="10%">cliente</th>
                        <th WIDTH="5%">jabas</th>
                        <th WIDTH="5%">aves</th>
                        <th WIDTH="5%">p.bruto</th>
                        <th WIDTH="5%">tara</th>
                        <th WIDTH="5%">p.neto</th>
                        <th WIDTH="5%">p.prom</th>
                        <th WIDTH="5%">prec.u</th>
                        <th WIDTH="5%">total</th>
                        <th WIDTH="5%">cobrar</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>

    </form>


    <!-- /.card -->
    @section styles{
        <!-- DataTables -->
        <link rel="stylesheet" href="@Url.Content("~/plugins/datatables-bs4/css/dataTables.bootstrap4.css")">
        <link rel="stylesheet" href="@Url.Content("~/plugins/dateticker/datepicker3.css")">
        <link rel="stylesheet" href="@Url.Content("~/css/stylePantalla.css")">


    }

    @section scripts{
        <!-- DataTables -->
        <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/plugins/datatables-bs4/js/dataTables.bootstrap4.js")"></script>
        <script src="@Url.Content("~/plugins/dateticker/bootstrap-datepicker.js")"></script>
        <script src="@Url.Content("~/js/BandejaVentaPollos.js")"></script>
    }
