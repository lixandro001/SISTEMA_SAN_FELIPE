@{
    ViewBag.Title = "Gestión de Ventas";
    string CFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today.AddDays(-3));
    string FFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today);
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Bandeja de Ventas</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Desde</label>
                    <div class="col-sm-8">
                        <input type="hidden" id="hdnStartDate" class="form-control" name="date1" />
                        <div class="input-group date">
                            <input type="text" class="form-control pull-right" id="txtStartDate" value="@CFecha">
                            <div class="input-group-append" data-target="#txtStartDate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-4 col-form-label">Hasta</label>
                    <div class="col-sm-8">
                        <input type="hidden" id="hdnEndDate" class="form-control" name="date2" />
                        <div class="input-group date">
                            <input type="text" class="form-control pull-right" id="txtEndDate" value="@FFecha">
                            <div class="input-group-append" data-target="#txtEndDate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <button type="button" id="btnConsultar" class="btn btn-primary"> Consultar </button>
        <button type="button" id="btnNuevo" class="btn btn-success"> Nueva Venta </button>
    </div>
    <div class="card-body">
        <table id="tabDescTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th SIZE=1>dcm</th>
                    <th SIZE=1>ser</th>
                    <th SIZE=1>nro</th>
                    <th SIZE=1>fecha</th>
                    <th SIZE=1>zona</th>
                    <th SIZE=1>cliente</th>
                    <th SIZE=1>jabas</th>
                    <th SIZE=1>aves</th>
                    <th SIZE=1>p.bruto</th>
                    <th SIZE=1>tara</th>
                    <th SIZE=1>p.neto</th>
                    <th SIZE=1>p.prom</th>
                    <th SIZE=1>prec.u</th>
                    <th SIZE=1>total</th>
                    <th SIZE=1>cobrar</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/datatables-bs4/css/dataTables.bootstrap4.css")">
    <link rel="stylesheet" href="@Url.Content("~/plugins/dateticker/datepicker3.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/stylePantalla.css")">

 
}

@section scripts{
    <!-- DataTables -->
    <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/plugins/datatables-bs4/js/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/plugins/dateticker/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/js/BandejaVentaPollos.js")"></script>
}
