
@{
    ViewBag.Title = "FichaVenta";
    string CFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today.AddDays(-7));
    string FFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today);
}

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Gestión de Ventas</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        <form id="frmGuardar" class="form-horizontal" role="form" method="post" action="">
            <input id="codecliente" type="hidden" name="" />
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-auto bg-dark p-1 text-center">
                        <h6>REGISTRO DE GUIAS DE SALIDA</h6>
                    </div>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputNro" class="col-sm-1 col-form-label">Nro</label>
                        <div class="col-sm-4">
                            <input id="txtNroGuiaSalida" type="text" class="form-control" />
                        </div>
                        <div class="col-sm-2">
                            <input id="txtNroGuiaSalidaNumero" type="text" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <input id="txtNroGuiaSalidaNumero2" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputFecha" class="col-sm-1 col-form-label">Fecha</label>
                        <div class="col-sm-3">
                            <input id="txtFecha" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">Mnd</label>
                        <div class="col-sm-3">
                            <input id="txtMnd" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">T/Cam.</label>
                        <div class="col-sm-3">
                            <input id="txtTCam" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">RUC Cobranza</label>
                        <div class="col-sm-4">
                            <input id="txtRUCCobranza" type="text" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <input id="txtRUCCobranzaNombre" type="text" class="form-control" />
                        </div>
                        <label for="inputMotivo" class="col-sm-1 col-form-label">Motivo</label>
                        <div class="col-sm-2">
                            <select id="cboMotivo" class="form-control">
                                <option>Ventas</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

         
      
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">ID</label>
                        <div class="col-sm-2">
                            <input id="txtID" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">CODIGO</label>
                        <div class="col-sm-3">
                            <input id="txtCODIGO" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-2 col-form-label">DESCRIPCION</label>
                        <div class="col-sm-3">
                            <input id="txtDESCRIPCION" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">NRO.AVES</label>
                        <div class="col-sm-2">
                            <input id="txtAVES" type="text" class="form-control" />
                        </div>
                        <label for="inputJABAS" class="col-sm-1 col-form-label">JABAS</label>
                        <div class="col-sm-3">
                            <input id="txtJABAS" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-2 col-form-label">P.BRUTO</label>
                        <div class="col-sm-3">
                            <input id="txtpesoBRUTO" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">TARA</label>
                        <div class="col-sm-2">
                            <input id="txtTARA" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">PESO NETO</label>
                        <div class="col-sm-3">
                            <input id="txtPESONETOG" type="text" class="form-control" />
                        </div>
                        <label for="inputNombreRazon" class="col-sm-2 col-form-label">PREC.UNITARIO</label>
                        <div class="col-sm-3">
                            <input id="txtUNITARIO" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <label for="inputNombreRazon" class="col-sm-1 col-form-label">IMPORTE</label>
                        <div class="col-sm-2">
                            <input id="txtIMPORTE" type="text" class="form-control" />
                        </div>

                        <div class="col-sm-2">
                            <input id="txtStatus" type="text" placeholder="Status" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
             

            @*<div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <input id="txtStatus" type="text" placeholder="Status" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>*@

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <button id="cbPesoPromedio" type="button" class="btn btn-primary">Peso Promedio </button>
                        </div>
                        <div class="col-sm-2">
                            <input id="txtExonerado" type="text" class="form-control" placeholder="Exonerado" />
                        </div>
                        <div class="col-sm-2">
                            <input id="txtIGV" type="text" class="form-control" placeholder="IGV" />
                        </div>
                        <div class="col-sm-3">
                            <input id="txtCobrado" type="text" class="form-control" placeholder="Cobrado" />
                        </div>
                        <div class="col-sm-3">
                            <input id="txtCancelacion" type="text" class="form-control" placeholder="Fec.Cancelacion." />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">

                        <div class="col-sm-2">
                            <input id="txtpesoPromedioDato" type="text" class="form-control" placeholder="0.00" />
                        </div>

                        <div class="col-sm-2">
                            <input id="txtAfecto" type="text" class="form-control" placeholder="Afecto" />
                        </div>

                        <div class="col-sm-2">
                            <input id="txtTotal" type="text" class="form-control" placeholder="Total" />
                        </div>

                        <div class="col-sm-3">
                            <input id="txtporCobrar" type="text" class="form-control" placeholder="Por Cobrar" />
                        </div>

                        <div class="col-sm-3">
                            <button id="txt" type="button" class="form-control-sm"><i class="fa fa-database" aria-hidden="true"></i></button>
                            <input id="txtSN" type="text" class="form-control" placeholder="s/n" />
                            <input id="txtSN1" type="text" class="form-control" placeholder="0000" />
                            <input id="txtSN2" type="text" class="form-control" placeholder="0000000" />
                        </div>
                    </div>
                </div>
            </div>


            <div class="card-footer">
                <button id="btnGuardarFormulario" type="button" class="btn btn-success">Guardar Guia de Venta</button>
            </div>

        </form>
        <!-- /.card-body -->
    </div>
</div>
<!-- /.card -->

 
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Seleccione Cliente</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="card-body">
              <table id="tabDescTablaCliente" class="table table-bordered table-striped">
                  <thead>
                      <tr>
                          <th>Acciones</th>
                          
                          <th>Zona</th>
                          <th>Nombre Cliente</th>
                      </tr>
                  </thead>
                  <tbody></tbody>
              </table>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>


